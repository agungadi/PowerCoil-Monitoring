<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_splash"
    tools:context=".EditListrik">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/centreLocatorCardDesign"
                android:padding="100dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:focusableInTouchMode="false"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">

                        <EditText
                            android:id="@+id/textId"
                            style="@style/modifiedEditText"
                            android:hint="Id"
                            android:singleLine="true"
                            android:visibility="visible"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtKapasitas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/textKapasitas"
                            style="@style/modifiedEditText"
                            android:hint="Kapasitas /MW"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtTerisi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/textTerisi"
                            style="@style/modifiedEditText"
                            android:hint="Terisi /MW"
                            android:singleLine="true" />

                    </com.google.android.material.textfield.TextInputLayout>



                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/textTenaga"
                            style="@style/modifiedEditText"
                            android:ems="10"
                            android:hint="Radiasi/Kecepatan Angin"
                            android:inputType="textEmailAddress" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputMob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/textJumlah"
                            style="@style/modifiedEditText"
                            android:hint="Jumlah Turbin/Panel"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <Button
                            android:id="@+id/btn_del"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:backgroundTint="#9B0000"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Hapus"/>
                        <Button
                            android:id="@+id/submitBtn"
                            android:layout_weight="0.5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/centre_button"

                            android:layout_margin="10dp"
                            android:text="Simpan"/>

                    </LinearLayout>

                </LinearLayout>

<!--                <TextView-->
<!--                    android:id="@+id/tvlogin"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:textStyle="bold"-->
<!--                    android:layout_marginLeft="25dp"-->
<!--                    android:textColor="@color/themeColor"-->
<!--                    android:textSize="17sp"-->
<!--                    android:text="Kembali "-->
<!--                    android:layout_marginTop="330dp"-->
<!--                    />-->

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>