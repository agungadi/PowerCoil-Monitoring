<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlPengkajian"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_home">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="7dp"
                app:cardElevation="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="invisible"/>

                        <TextView
                            android:id="@+id/tvNama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:text="Nama         :"
                            />

                        <TextView
                            android:id="@+id/name"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:textSize="16dp"
                            android:text="Tenaga Surya"
                            android:layout_toRightOf="@id/tvNama"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            />


                        <TextView
                            android:id="@+id/tvAlamat"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_margin="5dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_below="@id/tvNama"
                            android:text="Alamat       :"
                            />

                        <TextView
                            android:id="@+id/alamat"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:layout_toRightOf="@id/tvAlamat"
                            android:layout_below="@id/name"
                            android:text="Jalan Merdeka No 2 Kec. Dasa Kab. Bojonegoro"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:textColor="@android:color/black"
                            />

                        <TextView
                            android:id="@+id/tvPelaksana"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_below="@id/tvAlamat"
                            android:text="Pelaksana :"
                            />


                        <TextView
                            android:id="@+id/pelaksana"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:layout_toRightOf="@id/tvPelaksana"
                            android:layout_below="@id/alamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            />

                        <TextView
                            android:id="@+id/perusahaan"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:layout_toRightOf="@id/pelaksana"
                            android:layout_below="@id/alamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            />


                        <TextView
                            android:id="@+id/tvTanggal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_below="@id/tvPelaksana"
                            android:text="Tanggal     :"
                            />


                        <TextView
                            android:id="@+id/tanggal"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            android:layout_margin="5dp"
                            android:layout_toRightOf="@id/tvPelaksana"
                            android:layout_below="@id/pelaksana"
                            android:layout_width="wrap_content"
                            android:text=""
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            />

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start|center"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="-20dp"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end|center"
            android:layout_marginTop="-20dp"
            android:layout_marginEnd="-10dp"
            android:gravity="center" />

    </FrameLayout>


</RelativeLayout>