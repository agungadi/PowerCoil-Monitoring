<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_bk_color"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:layout_gravity="center"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:id="@+id/linear1"
        android:layout_marginTop="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                style="@style/Wrapparent"
                android:textColor="@color/darkTextColor"
                android:text="Hereâ€™s\nyour first\nstep with \nus! "/>

            <ImageView
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/turbins" />
        </RelativeLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputName"
                    style="@style/Netralparent"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:id="@+id/etname"
                        style="@style/modifiedEditText"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:hint="Nama"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputEmail"
                    style="@style/Netralparent"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:id="@+id/etemail"
                        style="@style/modifiedEditText"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:hint="Email"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputRoles"
                    style="@style/Netralparent"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:id="@+id/etroles"
                        style="@style/modifiedEditText"
                        android:inputType="text"
                        android:maxLines="1"
                        android:hint="Roles"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/textInputPassword"
                    style="@style/Netralparent"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:id="@+id/etpassword"
                        style="@style/modifiedEditText"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:hint="Password"/>
                </com.google.android.material.textfield.TextInputLayout>



                <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                    android:id="@+id/btnRegister"
                    style="@style/registerButton"
                    app:spinning_bar_width="4dp"
                    app:spinning_bar_color="#FFF"
                    android:text="Register"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    app:initialCornerAngle="27dp"
                    app:spinning_bar_padding="6dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <TextView
        android:id="@+id/onLoginClick3"
        style="@style/Netralparent"
        android:layout_below="@id/linear1"
        android:layout_alignBaseline="@id/onLoginClick4"
        android:layout_centerInParent="true"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/onLoginClick4"
        android:text="Login user? Click Here"
        android:textAlignment="textStart"
        android:layout_marginTop="50dp"
        android:textColor="@color/utamacolor"
        android:textSize="17sp"
        android:textStyle="bold" />
    <View
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_width="11dp"
        android:layout_height="match_parent"
        android:background="@drawable/ic_side_bg"/>

    <ImageView
        android:id="@+id/onLoginClick4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_img"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="30dp"
        android:adjustViewBounds="false"/>
</RelativeLayout>